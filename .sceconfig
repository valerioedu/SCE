# size for tabs (spaces)
tab_size=4

# specific autocompletion settings
parenthesis_autocomplete=1
quotations_autocomplete=1

# automatic file saving
autosave=1

# color sets are based on vs code
# color 1: types;             vs code blue
# color 2: control flow;      vs code purple
# color 3: variables;         vs code cyan
# color 4: function calls;    vs code light yellow
# color 5: numbers;           vs code light green
# color 6: parentheses;       vs code variable
# color 7: strings;           vs code orange
# color 8: typedef (c);       vs code green
# color 9: escape sequences;  vs code dark yellow
# color 0: comments;          vs code dark green

color_0=0
color_1=0
color_2=0
color_3=0
color_4=0
color_5=0
color_6=0
color_7=0
color_8=0
color_9=0

# default path for files
path=